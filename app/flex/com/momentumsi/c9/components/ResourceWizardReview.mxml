		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
	<fx:Script>
		<![CDATA[
			import com.maccherone.json.JSON;
			import com.momentumsi.c9.utils.Helpers;
			public function convertToDisplay():void
			{
				reviewText.text = JSON.encode(reviewObject, true);
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<fx:Object id="reviewObject"/>
	</fx:Declarations>
	<s:TextArea id="reviewText" editable="false" height="100%" width="100%"/>
</s:Group>
